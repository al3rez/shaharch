#!/bin/bash

# Link all the key config files to shaharch's internal versions for quicker testing
ln -nsf ~/.local/share/shaharch/config/hypr/hyprland.conf ~/.config/hypr/
ln -nsf ~/.local/share/shaharch/config/hypr/hypridle.conf ~/.config/hypr/
ln -nsf ~/.local/share/shaharch/config/waybar/config ~/.config/waybar/
ln -nsf ~/.local/share/shaharch/config/wofi/config ~/.config/wofi/
